	"version": "0.2.0",
	"configurations": [
		{
			"name": "HashLink (launch)",
			"request": "launch",
			"type": "hl",
			"cwd": "${workspaceFolder}",
			"args": ["--profile 10000"],
			"preLaunchTask": {
				"type": "haxe",
				"args": "active configuration"
			}
		},
		{
			// Warning, compilation will take like 10 minutes
			"name": "Haxe Interpreter (macro debugging)",
			"type": "haxe-eval",
			"request": "launch",
			"args": ["benchOverrides.hxml"],
		},
	]
}